# Server Configuration
PORT=3000
NODE_ENV=development

# Session Secret (REQUIRED)
# Generate a secure random string for production
# Example: openssl rand -base64 32
SESSION_SECRET=your-secret-key-here-change-in-production

# PostgreSQL Database
POSTGRES_DB=node-auth-server
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password

# Redis (Optional)
# If REDIS_URL is not set, PostgreSQL will be used for session storage
# Format: redis://username:password@host:port
REDIS_URL=
REDIS_PASSWORD=

# CORS Configuration
# Comma-separated list of allowed origins
# Example: http://localhost:3000,http://localhost:5173,https://example.com
CORS_ORIGINS=http://localhost:3000

# CSRF Protection (REQUIRED)
# Generate a secure random string for CSRF token signing
# Example: openssl rand -base64 32
CSRF_SECRET=your-csrf-secret-here-change-in-production
